<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="willaime.noah.montp1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bouton_bonjour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Bonjour_c"
            android:elevation="0dp"
            android:text="@string/bonjour" />

        <Button
            android:id="@+id/bouton_chrono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/chrono_c"
            android:text="@string/chronometre" />

        <Button
            android:id="@+id/bouton_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/photo_c"
            android:text="@string/photo" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
